    "bind": {
      "model": "address"
    }
  },
  "layout": {
    "primary": "id",
    "header": {
      "preset": {},
      "actions": []
    },
    "filter": {
      "columns": [],
      "actions": [
        {
          "title": "添加",
          "icon": "icon-plus",
          "width": 3,
          "action": {
            "Common.openModal": {
              "width": 640,
              "Form": {
                "type": "edit",
                "model": "address"
              }
            }
          }
        }
      ]
    },
    "table": {
      "columns": [
        {
          "name": "城市"
        },
        {
          "name": "详细地址"
        },
        {
          "name": "省份"
        },
        {
          "name": "状态"
        },
        {
          "name": "所属用户"
        }
      ],
      "operation": {
        "fold": false,
        "actions": [
          {
            "action": {
              "Common.openModal": {
                "width": 640,
                "Form": {
                  "type": "view",
                  "model": "address"
                }
              }
            },
            "title": "查看",
            "icon": "icon-eye"
          },
          {
            "title": "编辑",
            "icon": "icon-edit-2",
            "action": {
              "Common.openModal": {
                "Form": {
                  "type": "edit",
                  "model": "address"
                }
              }
            }
          }
        ]
      }
    }
  },
  "fields": {
    "filter": {},
    "table": {
      "状态": {
        "edit": {
          "props": {
            "options": [
              {
                "value": "enabled",
                "label": "enabled"
              },
              {
                "label": "disabled",
                "value": "disabled"
              }
            ],
            "placeholder": "请选择状态"
          },
          "type": "Select"
        },
        "view": {
          "props": {},
          "type": "Text"
        },
        "bind": "status"
      },
      "所属用户": {
        "bind": "user_id",
        "view": {
          "props": {},
          "type": "Text"
        },
        "edit": {
          "type": "Select",
          "props": {
            "xProps": {
              "$remote": {
                "process": "models.user.Get",
                "query": {}
              }
            }
          }
        }
      },
      "城市": {
        "view": {
          "props": {},
          "type": "Text"
        },
        "edit": {
          "type": "Input",
          "bind": "city",
          "props": {}
        },
        "bind": "city"
      },
      "详细地址": {
        "bind": "location",
        "view": {
          "type": "Text",
          "props": {}
        },
        "edit": {
          "type": "Input",
          "bind": "location",
          "props": {}
        }
      },
      "省份": {
        "view": {
          "type": "Text",
          "props": {}
        },
        "edit": {
          "props": {},
          "type": "Input",
          "bind": "province"
        },
        "bind": "province"
      }
    }
  }
